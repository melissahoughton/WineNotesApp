<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WineNotesApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WineNotesApp"
    xmlns:pages="clr-namespace:WineNotesApp.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Add Wine Note"
        ContentTemplate="{DataTemplate local:WineNoteEntryPage}"
        Route="WineNoteEntryPage" />

    <ShellContent
        Title="Wine Notes"
        ContentTemplate="{DataTemplate pages:WineNoteListPage}"
        Route="WineNoteListPage" />

</Shell>
